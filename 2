using System;
using System.Collections.Generic;

namespace ConsoleApp7
{
  


        class Program
        {
            static void Main(string[] args)
            {
            Random random = new Random();
            int a;
             a = random.Next(1, 200);

            while (true)
            {
                int b;
               
                Console.Write("숫자를 입력하시오. : ");
                b = int.Parse(Console.ReadLine());
                if (a < b)
                {
                    Console.WriteLine(b+" 보다는 작은 숫자입니다.");
                }
                else if (a > b)
                {
                    Console.WriteLine(b+" 보다는 큰 숫자입니다.", b);
                }
                else
                {
                    Console.WriteLine("정답입니당");
                    break;
                }
            }
            }
        }
    
}
